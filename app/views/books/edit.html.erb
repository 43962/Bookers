    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: book_path(@book.id),methood: :patch do |f|%>
<div class="field">
<%= f.label :book_title, "Title" %>
